  gem 'bundler', '1.17.1'
  gem 'jekyll', '~> 3.9.0'
  gem 'jekyll-redirect-from', '~> 0.14.0'
  gem 'jekyll-sitemap', '~> 1.2.0'
  gem 'rouge', '~> 3.2.1'
  gem 'kramdown', '~> 2.3.1'
  gem 'kramdown-parser-gfm', '~> 1.1.0'
  gem 'nokogiri', '~> 1.11.4'
  gem "jekyll-last-modified-at", "~> 1.0"
  gem 'wdm', '~> 0.1.1', :install_if => Gem.win_platform?
end
